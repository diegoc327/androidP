<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="diegobr.crud_alumnos.ActividadPrincipal">

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/btnNuevo"
        android:src="@drawable/rojo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="80dp" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/btnBuscar"
        android:src="@drawable/rojo"
        android:layout_alignTop="@+id/btnNuevo"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/btnNuevo" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/btnModificar"
        android:src="@drawable/rojo"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="false"
        android:layout_marginBottom="80dp" />

    <ImageButton
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/btnEliminar"
        android:layout_alignTop="@+id/btnModificar"
        android:layout_alignParentEnd="true"
        android:src="@drawable/rojo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Alumno"
        android:id="@+id/textView3"
        android:layout_marginTop="53dp"
        android:layout_alignTop="@+id/btnNuevo"
        android:layout_alignEnd="@+id/btnNuevo"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Buscar Alumno"
        android:id="@+id/textView4"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Modificar Alumno"
        android:id="@+id/textView5"
        android:layout_marginTop="46dp"
        android:layout_alignTop="@+id/btnModificar"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/btnEliminar"
        android:layout_alignEnd="@+id/btnModificar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Eliminar Alumno"
        android:id="@+id/textView6"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
