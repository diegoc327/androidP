<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".AgregarAlumnos">


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="Número de Control"
        android:ems="10"
        android:id="@+id/textControl"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textNombre"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Nombre"
        android:ems="10"
        android:id="@+id/textNombre"
        android:layout_below="@+id/textControl"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDireccion"
        android:text="Dirección"
        android:layout_below="@+id/textNombre"
        android:layout_alignStart="@+id/textNombre"
        android:layout_alignEnd="@+id/textNombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:text="Teléfono"
        android:ems="10"
        android:id="@+id/textTelefono"
        android:layout_below="@+id/textDireccion"
        android:layout_alignStart="@+id/textDireccion"
        android:layout_alignEnd="@+id/textDireccion" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:id="@+id/spinnerSexo"
        android:layout_below="@+id/textTelefono"
        android:layout_alignEnd="@+id/textTelefono" />

    <Spinner
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:id="@+id/spinnerCarrera"
        android:layout_below="@+id/textView"
        android:layout_alignStart="@+id/spinnerSexo" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sexo"
        android:id="@+id/textView"

        android:layout_below="@+id/textTelefono"
        android:layout_alignStart="@+id/textTelefono" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Carrera"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/spinnerCarrera"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/textEmail"
        android:text="E-mail"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="29dp"
        android:layout_alignEnd="@+id/spinnerCarrera" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha de Nacimiento"
        android:id="@+id/reminder_date"
        android:layout_below="@+id/textEmail"
        android:layout_alignStart="@+id/textEmail"
        android:layout_alignEnd="@+id/textEmail" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:id="@+id/btnGuardar"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

